.calc-page{
    box-sizing: border-box;
    width: 100vw;
    height: 100vh;
    display: flex;
    flex-direction: column;
}
.calc-result{
    flex-grow: 1;
    background: #000;
    display: flex;
    flex-direction: column-reverse;
    text-align: right;
}
.result-wrapper{
    padding: 0 4vw;
}
.result{
    font-size: 60px;
    color: #fff;
}
.calc-wrapper{
    background: #000;
    padding-bottom: 40rpx;
}
.calc-button-wrapper{
    width: 100vw;
    margin-top: 4vw;
    display: flex;
}
.calc-button{
    box-sizing: border-box;
    width: 20vw;
    height: 20vw;
    margin-left: 4vw;
    border-radius: 50%;
    background: #333;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #fff;
    font-size: 36px;
}
.calc-button.two-button{
    width: 44vw;
    border-radius: 10vw;
}
.calc-button.last{
    background: #F8952D;
}
.calc-button.gray{
    background: #A4A4A4;
    color: #000;
}